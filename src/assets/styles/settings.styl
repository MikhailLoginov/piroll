html
  font-family Montserrat, sans-serif
  color #8c8c8c
  font-size 16px
  +below(768px)
    font-size 14px
  +below(400px)
    font-size 12px

.svg-sprite
  display none

.container
  max-width container-width
  margin 0 auto
  padding 0 20px
  +below(1100px)
    padding 0 10px
  +below(400px)
    padding 0 5px

h1
  font-family Raleway, sans-serif
  font-size 3.25rem
  font-weight 700

h2
  font-family Raleway, sans-serif
  font-size 1.875rem
  color #555555
  font-weight 600

h3
  font-family Raleway, sans-serif
  font-size 2.25rem
  font-weight 500

a
  text-decoration none

p 
  font-weight 300

.a-start
  border-radius 3px
  background-color #998675
  color white
  font-family Raleway, sans-serif
  font-weight 800
  font-size 0.875rem
  width 160px
  height 45px
  line-height 45px
  border 2px solid #998675
  box-shadow 0 2px 0 0 rgb(115, 99, 86)
  &:hover
    color rgb(115, 99, 86)
  &:active
    box-shadow none
    transform scale(0.99)