html
  font-family Montserrat, sans-serif
  color #8c8c8c
  font-size 16px
  +below(768px)
    font-size 14px
  +below(400px)
    font-size 12px

.svg-sprite
  display none

.container
  max-width container-width
  margin 0 auto
  padding 0 20px
  +below(1100px)
    padding 0 10px
  +below(400px)
    padding 0 5px

h1
  font-family Raleway, sans-serif
  font-size 3.25rem
  font-weight 700

h2
  font-family Raleway, sans-serif
  font-size 1.875rem
  color #555555
  font-weight 600

