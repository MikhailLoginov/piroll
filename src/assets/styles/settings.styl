body
  font-family Lato, sans-serif
  color black

.svg-sprite
  display none

.container
  max-width 1060px
  margin 0 auto
  padding 0 20px
  +below(1100px)
    padding 0 10px
  +below(400px)
    padding 0 5px

h1
  font-family Cabin, sans-serif
  font-size 60px
  text-shadow 0px 1px 0px rgba(0, 0, 0, 0.13)
  font-weight 400
  letter-spacing -0.05px
  line-height 60px
  margin 0
  +below(768px)
    font-size 44px
    line-height 50px
  +below(500px)
    font-size 36px
    line-height 40px

h2
  font-family Cabin, sans-serif
  font-size 48px
  font-weight 400
  letter-spacing -0.1px
  margin 0
  +below(768px)
    font-size 36px

h3
  font-size 18px
  font-weight 700

h4
  font-size 16px
  font-weight 700

a
  text-decoration none
  transition all .25s
  &:hover
    color rgb(108, 108, 108)
  &:active
    color rgb(217, 222, 225)


.logo
  font-size 30px
  font-weight 400
  font-family Poiret One, cursive
  color white
  letter-spacing 0.5px
  &__strong
    font-weight 700
  &:hover
    color white
  &:active
    opacity 0.8

.a-start 
  display block
  font-family Lato, sans-serif
  background-color #4ecb8c
  border-radius 5px
  font-weight 700
  color white
  width 220px
  height 52px
  cursor pointer
  border 2px solid transparent
  transition all .25s
  letter-spacing 0.5px
  text-align center
  line-height 52px
  &:hover
    color #4ecb8c
    background-color transparent
    border 2px solid #4ecb8c
  &:active
    opacity 0.6

