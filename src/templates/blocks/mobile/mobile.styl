.section-mobile
  padding 76px 0 0 155px
  +below(1200px)
    padding 76px 5px 0 5px
  background-color  #fbfaf8

.mobile
  display flex
  overflow hidden
  +below(1200px)
    position relative
  &__image
    +below(1200px)
      position absolute
      bottom 0
      opacity 0.2
  &__info
    width 70%
    margin 111px 0 0 30px
    +below(1200px)
      margin 10px
      width 100%
      height 600px
  &__ttl
    +below(1200px)
      position relative
      z-index 1
  &__text
    color #8c8c8c
    font-size 1rem
    line-height 1.75rem
    margin 25px 100px 30px 0
    +below(1200px)
      margin-right 0
      position relative
      z-index 1
  ul 
    margin 0 0 0 50px
    list-style none
    +below(1200px)
      position relative
      z-index 1
    li 
      margin-bottom 1px
      line-height 2rem
    svg
      margin 0 30px -5px 0
      fill #c7b299