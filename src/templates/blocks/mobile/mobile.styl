.section-mobile
  padding 100px 0 0 0
  background-color  #fbfaf8

.mobile
  display flex
  overflow hidden
  +below(900px)
    position relative
  &__image
    +below(900px)
      position absolute
      bottom 0
      opacity 0.2
  &__info
    width 70%
    +below(900px)
      width 100%
      height 600px
  &__ttl
    +below(900px)
      position relative
      z-index 1
  &__text
    color #8c8c8c
    font-size 1rem
    line-height 1.75rem
    margin 0 0 50px 0
    +below(900px)
      position relative
      z-index 1
  ul 
    list-style none
    +below(900px)
      position relative
      z-index 1
    li 
      line-height 2rem
    svg
      margin 0 30px -5px 0
      fill #c7b299