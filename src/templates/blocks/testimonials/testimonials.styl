.testimonials
  margin 120px 0 104px 0
  text-align center
  h2
    margin 0 0 69px 0
  &__items
    margin 0 5px
    display flex
    flex-wrap wrap
    justify-content space-between
  &__column
    width 48.5%
    +below(768px)
      width 100%

.review
  &__text
    position relative
    border 2px solid #dedede
    text-align left
    padding 23px 30px 26px 30px
    color  #444444
    font-size 20px
    line-height 28px
    +below(500px)
      font-size 14px
      line-height 22px
  &__border-block
    width 10px
    height 10px
    position absolute
    bottom -7px
    right 24px
    background-color white
    border-bottom 2px solid #dedede
    border-right 2px solid #dedede
    transform rotate(45deg)
  &__personal
    display flex
    justify-content flex-end
    margin 18px 0 37px 0
  &__info
    margin 9px 0 0 0
    display flex
    flex-direction column
    text-align right
  &__name
    font-weight 700
    font-size 18px
    font-weight 700
  &__role
    margin 2px 0 0 0
    color #666666
    font-size 16px
    font-weight 400
    letter-spacing 0.5px
    +below(500px)
      font-size 12px
  &__photo
    background url(/assets/images/user.jpg) no-repeat
    background-size cover
    float right
    width 58px
    height 58px
    border-radius 50%
    margin 0 2px 0 22px