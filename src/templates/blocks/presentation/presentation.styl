.presentation
  position relative
  &__info
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto
    max-width 500px
    height 300px
    display flex
    flex-direction column
    align-items center
    +below(1000px)
      justify-content flex-end
      margin-bottom 2em
    +below(550px)
      margin-bottom 0
    +below(480px)
      margin-bottom 2em
  &__ttl
    color white
    +below(480px)
      display none
  &__text
    color white
    text-align center
    +below(1000px)
      display none
  &__length
    color #c7b299
    margin-top 15px
    +below(650px)
      display none

  &__video
    width 100%

