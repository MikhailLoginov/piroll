.section-projects
  padding 100px 0

.projects
  display flex
  flex-direction column
  align-items center
  &__text
    text-align center
    width 700px
  &__industries
    margin 30px 0
    ul 
      list-style none
      li 
        display inline-block
        a 
          color #8c8c8c
          font-size 0.875rem
          font-weight 300
          padding 5px 20px
          border 1px solid #ebebeb
          border-radius 3px
          margin 0 2px
  .active
    color white
    background #998675
  &__wrapper
    display flex
    flex-wrap wrap 
    justify-content space-around

.project
  width 370px
  background #fbfaf8
  margin-bottom 30px
  position relative
  //display flex
  //flex-direction column
  &__ttl
    color #c7b29a
  &__industry
    color #d1d1d1
    font-size 0.875rem
    font-weight 300
  &__info
    position relative
    padding 28px 30px
    box-sizing border-box
  &__border-block
    position absolute 
    top -14px
    left 20px
    z-index 1
    path
      fill #fbfaf8

  &__overlay
    position absolute 
    left 0
    top 0
    display none
    width 100%
    height 237px
    background rgba(17, 17, 17, 0.7)
    display none
    svg
      cursor pointer
      fill white
      margin 0 14px
      &:hover
        fill #c7b299
      &:active
        opacity 0.7

  &:hover
    .project__overlay
      display flex
      align-items center
      justify-content center
    .project__info
      background #362f2d
    .project__border-block
      path
        fill #362f2d
        
