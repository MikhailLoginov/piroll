.section-about
  background #fbfaf8
  padding-top 33px

.about
  text-align center
  &__text
    max-width 700px
    margin 16px auto 34px auto
    font-weight 300
    line-height 1.75rem
  &__image-comp
    position relative
    +below(1000px)
      display flex
      flex-direction column
  &__image-middle
    cursor pointer
    display block
    position relative
    margin 0 auto
    z-index 1
    transition all 1s
    +below(1000px)
      position unset
      width 90%
      &:hover
        transform scale(1.1)
    +above(1000px)
      &:hover
        transform scale(1.1)
  &__image-left
    cursor pointer
    display block
    position absolute
    top 82px
    left 0
    transition all 1s
    +below(1000px)
      position unset
      margin 20px auto
      width 90%
      &:hover
        transform scale(1.1)
    +above(1000px)
      &:hover
        left 10px
        transform scale(1.1)
        z-index 2
  &__image-right
    cursor pointer
    display block
    position absolute 
    right 0
    top 82px
    transition all 1s
    +below(1000px)
      position unset
      margin 20px auto
      width 90%
      &:hover
        transform scale(1.1)
    +above(1000px)
      &:hover
        left 10px
        transform scale(1.1)
        z-index 2

.purchase
  color white
  background linear-gradient(to right, #1c1412, #4d3122)
  padding 44px 0 50px 0
  &__left-block
    margin-left 30px
  &__ttl
    font-size 1.75rem
    font-weight 400
    margin-bottom 5px
    +below(500px)
      text-align center
  &__brown
    color #c7b299
  p 
    font-size 1.125rem
    font-weight 300
    color #615855
    letter-spacing -0.1px
    +below(500px)
      text-align center
  .container
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap
  .a-button
    margin 2px 30px 0 0
    height 44px