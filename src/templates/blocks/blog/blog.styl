.blog
  padding 120px 0 109px 0
  h2
    margin-bottom 19px
    text-align center
  &__items
    display flex
    justify-content space-between
    margin 0 3px
    flex-wrap wrap
    +below(1100px)
      justify-content space-around

.post
  width 330px
  margin-top 50px
  &__image
    cursor pointer
    width 100%
    height 205px
    background url(/assets/images/mask.png) no-repeat
  &__ttl
    margin 23px 40px 16px 15px
    line-height 25px
    +below(500px)
      margin 23px 0 16px 0
  .calendar
    cursor pointer
    margin 0 0 0 5px
    width 14px
    height 14px
    fill #999999
    &:hover
      opacity 0.7
    &:active
      opacity 0.5
  &__info
    display flex
    margin 0 10px 0 10px
    +below(500px)
      margin 0
  &__date
    cursor pointer
    margin 0 30px 0 5px
    color #999999
    font-size 14px
    &:hover
      opacity 0.7
    &:active
      opacity 0.5
  .chat
    cursor pointer
    width 18px
    height 18px
    fill #999999
    &:hover
      opacity 0.7
    &:active
      opacity 0.5
  &__comments
    cursor pointer
    color #999999
    font-size 14px
    margin 0 0 0 4px
    &:hover
      opacity 0.7
    &:active
      opacity 0.5
  &__text
    margin 14px 13px 0 13px
    +below(500px)
      margin 14px 0 0 0
    color #444444
    line-height 24px
    font-size 16px