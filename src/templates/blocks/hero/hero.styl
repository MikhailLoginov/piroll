.section-hero
  position relative
  overflow hidden
  min-height 100vh
  background-color rgba(0,0,0,0.3)
  video
    position absolute
    left 0
    top 0
    min-width 100%
    min-height 100%
    width auto
    height auto
    z-index -1

.hero
  position relative
  display flex
  align-items center
  min-height 100vh
  &__content
    margin 33px 0 0 4px
    max-width 680px
    +below(768px)
      margin-top 200px
    h1
      color white
  &__text
    margin 28px 0 62px 0
    color white
    font-weight 300
    font-size 20px
    line-height 32px
    font-weight 300
    text-shadow 0px 1px 0px rgba(0, 0, 0, 0.13)
  .a-start
    margin 0 0 0 2px
    +below(768px)
      margin-bottom 30px
    +below(500px)
      margin 0 auto 30px
  