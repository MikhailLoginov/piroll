.section-hero
  min-height 100vh
  .container
    pointer-events none

.hero
  min-height 100vh
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  position relative
  z-index 1
  color white
  h3
    +below(490px)
      display none
  h1 
    margin 6px 0 13px 0
  p
    max-width 600px
    line-height 1.5rem
    margin 0 0 50px 0
  .a-button
    margin-bottom 10px
    pointer-events auto
  
  