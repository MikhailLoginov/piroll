.section-experience
  background url("/assets/images/experience-bg.jpg") no-repeat
  background-size cover
  background-attachment fixed
  position relative
  color white
  p
    color white
  &:after
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 0
    background rgba(0,0,0,0.9)
  .container
    position relative
    z-index 1


.experience
  padding 120px 0 126px 0
  display flex
  justify-content space-between
  +below(1000px)
    flex-wrap wrap
  &__info
    width 48.9%
    margin 0 0 0 5px
    +below(768px)
      width 100%
    h2
      margin-bottom 39px
      +below(500px)
        text-align center
    p
      margin 0 40px 24px 0
      color white
      line-height 24px
    .btn-view
      margin 35px 0 0 0
  &__skills
    width 48.9%
    margin 0 0 0 28px
    +below(1000px) 
      margin 0
    +below(768px)
      width 100%
      margin-top 60px
    h2
      margin-bottom 37px
      +below(500px)
        text-align center

  .a-view
    margin 35px 0 0 1px
    +below(500px)
      margin 0 auto

.skill
  margin 0 0 24.5px 0
  &__ttl
    font-family Raleway, sans-serif
    font-size 16px
  &__graphic
    height 15px
    background-color white
    position relative
    margin 7px 4px 0 0
  &__success
    width 95%
    background-color #4ecb8c
    height 100%
    position absolute
    left 0
    top 0
    z-index 1
  &__mark
    position absolute
    left 91%
    +below(400px)
      left 88%
    top -42px
    background url("/assets/images/tooltip.png") no-repeat center
    width 40px
    height 40px
    font-size 12px
    display flex
    justify-content center
    align-items center
    padding-bottom 6px
    font-family Raleway, sans-serig
    font-weight 700
    .tooltip
      fill black
  &__amount
    position absolute
    z-index 1
    top 10px
    
  &.skill-2 
    .skill__success
      width 75%
    .skill__mark
      left 71%
  
  &.skill-3 
    .skill__success
      width 80%
    .skill__mark
      left 76%
  
  &.skill-4 
    .skill__success
      width 55%
    .skill__mark
      left 51%
  
  &.skill-5
    .skill__success
      width 85%
    .skill__mark
      left 81%
    