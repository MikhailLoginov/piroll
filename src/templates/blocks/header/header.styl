header
  position absolute
  width 100%
  z-index 2
  left 0
  top 0

.header
  padding 40px 0 0 0
  +below(800px)
    padding-top 20px
  display flex
  justify-content space-between
  flex-wrap wrap
  .logo
    display flex
    svg
      fill white
    &__ttl
      font-size 2.125rem
      font-family Raleway, sans-serif
      color white
      font-weight 400
      margin-top 8px
      +below(550px)
        display none
  
    

.nav-menu
  margin 0
  display flex
  list-style none
  overflow hidden
  -webkit-padding-start 0px
  li
    float left
    text-align center
    line-height 50px
    +below(1000px)
      line-height 30px
    a
      color white
      font-size 0.875rem
      font-weight 300
      padding 0 15px 10px 15px
      +below(1250px)
        padding 0 5px 10px 5px
      svg
        fill white
        margin-top 10px
        &:hover
          fill #c7b29a
        &:active
          opactiy 0.5
      transition all .25s
      &:hover
        color #c7b29a
  &__cart
    margin-left 50px
    +below(1250px)
      margin-left 0
  &__input
    width 0
    transition width 1s
    padding 0
    border 0
    background rgba(0,0,0,0.2)
    line-height 48px
    color white
    font-size 13px
    font-weight 300
    &:focus
      outline 0
  &__btn-search
    background transparent
    border 0
    padding 0
    cursor pointer
    &:hover svg
      fill #c7b29a
    &:focus
      outline 0
    svg
      fill white
      margin-top 10px
  &__form
    padding 0 10px
    &:hover .nav-menu__input
      width 120px
      padding 0 15px
      +below(410px)
        width 50px
        padding 0
  &__search:hover+li
    display none
  +below(1000px)
    opacity 0
    max-height 0
#menu-icon, #menu-icon:before, #menu-icon:after
  background white 
  border-radius 0.05em
  height 0.2em
  transition all 0.2s ease-in-out
  width 100%
#menu-icon:before, #menu-icon:after 
  content ""
  position absolute 
  left 0
#menu-icon:before
  top -0.4em
#menu-icon:after
  bottom -0.4em
#icon
  opacity 0
  position absolute
  z-index -1
  &:checked 
    &+ #menu-icon 
      background transparent 
      &:before
        top 0
        transform rotate(-45deg)
      &:after
        bottom 0
        transform rotate(45deg)
    &~ ul 
      bottom 0
      margin 2em 20px 0 0
      max-height inherit 
      opacity 1
      flex-direction column
      border-radius 5px
      li 
        display block
        background rgba(0,0,0,0.9)
#menu-icon
  cursor pointer
  max-width 1em 
  position relative
  display none
  float right
  margin 10px 20px 0 0
  +below(1000px)
    display inline-block

nav 
  +below(1000px)
    width 200px
  +below(410px)
    width 120px