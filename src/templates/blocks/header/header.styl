header
  position absolute
  width 100%
  z-index 1
  left 0
  top 0

.header
  padding 73px 0 50px 6px
  display flex
  justify-content space-between
  flex-wrap wrap
  +below(1000px)
    padding 63px 15px 40px 98px
    a img
      margin-bottom 30px
  +below(866px)
    padding 20px 10px 30px 10px
  .logo
    margin 19px 0 0 0

img
  width 64px
  height 56px
  fill black
  display block

nav 
  display flex

.nav-menu
  list-style none
  margin 30px -7px 0 0
  +below(1100px)
    margin 30px 0 0 0
  +below(600px)
    padding 0
  li
    float left
    text-align center
    +below(600px)
      float none
      text-align left
    a
      text-decoration none
      color white
      font-size 14px
      text-transform uppercase
      font-family Montserrat, sans-serif
      padding 0 15px 10px 15px
      font-weight 600
      +below(600px)
        text-align left
        padding 0
      transition all .25s
      &:hover
        border-bottom 3px solid white
        +below(550px)
          border-bottom none
      &:active
        border-bottom 3px solid white
        opacity 0.6
        +below(550px)
          border-bottom none
