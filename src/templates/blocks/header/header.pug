mixin header()
  // Header starts 
  HEADER
    .container
      +b.header--mobile
        NAV
          +e.INPUT(type="checkbox" id="icon")
          +e.LABEL(for="icon" id="menu-icon")
          +b.UL.nav-menu
            li
              a(href="#") Home
            li
              a(href="#") About us
            li
              a(href="#") Portfolio
            li
              a(href="#") Features
            li
              a(href="#") Blog
            li
              a(href="#") Pricing
            li
              a(href="#") Shortcodes
            li
              a(href="#") Contact
            li
              a(href="#") Cart
        
        +b.A(href="#").logo
          include ../../../assets/images/svg/logo.svg
        
        +b.search
          +e.FORM.form
            +e.INPUT.input
            +e.btn-search
              include ../../../assets/images/svg/icon-search.svg
      +b.header--desktop
        +b.A(href="#").logo
          include ../../../assets/images/svg/logo.svg
          +e.H3.ttl Waxom
        NAV
          +b.UL.nav-menu
            li
              a(href="#") Home
            li
              a(href="#") About us
            li
              a(href="#") Portfolio
            li
              a(href="#") Features
            li
              a(href="#") Blog
            li
              a(href="#") Pricing
            li
              a(href="#") Shortcodes
            li
              a(href="#") Contact
            li
              +e.A(href="#").cart
                include ../../../assets/images/svg/icon-cart.svg
            li
              +e.search
                +e.FORM.form
                  +e.INPUT.input
                  +e.BUTTON(type="submit").btn-search
                    include ../../../assets/images/svg/icon-search.svg
  // Header ends 