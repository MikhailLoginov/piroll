.section-posts
  padding 100px 0

.posts
  display flex
  align-items center
  flex-direction column
  &__text
    width 700px
    text-align center
    line-height 1.75rem
    margin-bottom 20px
    color #8c8c8c
  &__wrapper
    display flex
    justify-content space-around
    width 100%
  &__nav
    margin-top 50px
    svg
      cursor pointer
      fill #d1d1d1
      margin 0 3px
      transition all 0.25s
      &:first-child
        transform rotate(180deg)
      &:hover
        fill #c7b299
      &:active
        opacity 0.7
  
.post 
  position relative
  border 1px solid #f8f8f8
  width 370px
  display flex
  flex-direction column
  &__time-block
    position absolute
    left 20px
    top 20px
    z-index 1
  &__date
    width 50px
    height 35px
    border-top-left-radius 3px
    border-top-right-radius 3px
    background-color #363636
    color white
    font-size 1.5rem
    font-weight 300
    text-align center
    line-height 35px
  &__month
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    background-color #252525
    width 50px
    height 25px
    color white
    font-family Roboto, sans-serif
    font-size 0.75rem
    text-align center
    line-height 25px
  &__info
    padding 30px
  &__ttl
    color #555555
  &__text
    color #8c8c8c
    font-size 0.875rem
    font-weight 300
    line-height 1.375rem
    margin 15px 0 25px 0
  &__overlay
    position absolute
    left 0
    top 0
    width 100%
    height 220px
  &:hover
    .post__date
      background-color #c7b299
    .post__month
      background-color #a48d72
    .post__ttl
      color #c7b299
    .post__text
      color white
    .post__info
      background-color #362f2d
    .post__overlay
      background-color rgba(17, 17, 17, 0.7)
  
  